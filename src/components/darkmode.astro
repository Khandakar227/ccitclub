<mode>
    <label id="toggler" class="switch">
    <input id="darkmode_toggler" type="checkbox" />
    <span class="slider">
            <span class="light_mode">&#9788;</span>
            <span class="dark_mode">â˜¾</span>
        </span>
    </label>
</mode>

<script>
const modeables = document.querySelectorAll('.mode');
const modeToggleButton = document.getElementById('darkmode_toggler');

if(localStorage.getItem('darkMode') == 'true') {
    modeToggleButton.checked = true;
    modeables.forEach(modeable => {
        modeable.classList.add('darkmode');
    });
}

modeToggleButton.onclick = (e) => {
    modeables.forEach(modeable => {
        modeable.classList.toggle('darkmode');
    });

    localStorage.setItem('darkMode', modeToggleButton.checked);
}

</script>
<style>
mode {
    position: fixed;
    top: 91vh;
    left: 3vw;
}
.light_mode {
    font-size: calc(var(--mode-button-height) - 2px);
    color: white;
    position: absolute;
    bottom: 0px;
    left: 0;
}
.dark_mode {
    font-size: calc(var(--mode-button-height) - 2px);
    color: white;
    position: absolute;
    top: -2px;
    right: 0px;
}
.switch {
  position: relative;
  display: inline-block;
  width: var(--mode-button-width);
  height: var(--mode-button-height);
}
.switch input {
  opacity: 0;
  width: 0;
  height: 0;
}
.slider {
  position: absolute;
  cursor: pointer;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #616161;
  -webkit-transition: .4s;
  transition: .4s;
  font-size: 1rem;
}
.slider:after {
  position: absolute;
  content: "";
  height:  calc(var(--mode-button-height) - 8px);
  width: calc(var(--mode-button-height) - 8px);
  left: 4px;
  bottom: 4px;
  background-color: white;
  -webkit-transition: .4s;
  transition: .4s;
}

input:checked + .slider {
  background-color: #f32121;
}

input:focus + .slider {
  box-shadow: 0 0 1px #2196F3;
}

input:checked + .slider:after {
  -webkit-transform: translateX(26px);
  -ms-transform: translateX(26px);
  transform: translateX(26px);
}
</style>