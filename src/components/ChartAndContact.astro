<section style={parallax2}>
    <div class="contact text-center p-1">
    <h2 class="py-1">Let's Get In Touch</h2>
    <hr class="long-dash mb-1"/>
    <p class="pb-1">{contacts?.text}</p>
        <div class="container contacts grid-center-all t-1">
            <div class="phone">
                <svg class="icon" viewBox="0 0 32 32"><path d="M22 20c-2 2-2 4-4 4s-4-2-6-4-4-4-4-6 2-2 4-4-4-8-6-8-6 6-6 6c0 4 4.109 12.109 8 16s12 8 16 8c0 0 6-4 6-6s-6-8-8-6z"></path></svg>
                {contacts?.phone.map(number=> (
                    <p class="phone_number">{number}</p>
                ))}
            </div>

            <div class="mail">
                <svg class="icon" viewBox="0 0 32 32"><path d="M29 4h-26c-1.65 0-3 1.35-3 3v20c0 1.65 1.35 3 3 3h26c1.65 0 3-1.35 3-3v-20c0-1.65-1.35-3-3-3zM12.461 17.199l-8.461 6.59v-15.676l8.461 9.086zM5.512 8h20.976l-10.488 7.875-10.488-7.875zM12.79 17.553l3.21 3.447 3.21-3.447 6.58 8.447h-19.579l6.58-8.447zM19.539 17.199l8.461-9.086v15.676l-8.461-6.59z"></path></svg>
                <p>{contacts?.mail}</p>
            </div>
        </div>
    </div>
</section>

<script src="../scripts/chart.js" type="module" defer></script>

<style>
chart.max-width {
    max-width: 1000px;
    margin: 0 auto;
}
.canvas {
    width: 100%!important;
    border-radius: 10px;
}
.pie_canvas {
    max-height: 400px;
}
.bar_canvas {
    max-height: 300px;
}
.Chart .wrapper {
    background: rgba(111, 97, 97, 0.5);;
}
.chart__wrapper {
    grid-template-columns: 45% 50%;
    text-align: left;
    margin: 0 auto;
    gap: 1vw;
}
.chart__content {font-size: clamp(1rem, 10vw, 1.4rem); max-width: 600px;}
.bar {text-align: right;}
.join_us {
    padding: 2rem 0.5rem;
    background-color: #212529;
    color: var(--light-text);
}
.social-profiles {
    padding: 1rem 0rem;
    gap: 1vw;
}
.social-profiles .icon {
    max-width: 50px;
}

.social-profiles a {
    width: 50px;
    height: 50px;
    margin: 0 1rem;
}
section .contact {
    backdrop-filter: blur(10px);
    color: var(--light-text);
}
.contact .contacts {
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1vw;
    max-width: 1000px;
    margin: 0 auto;
}
.container icon {max-width:40px;}
.phone_number {padding: 0.5rem 0;}
@media (max-width: 900px) {
    .chart__wrapper {
        grid-template-columns: auto;
        text-align: center;
    }
    p.bar {grid-row: 2;}
    .Chart .wrapper {
        padding: .5rem;
    }
    .bar {text-align: center;}
}
</style>