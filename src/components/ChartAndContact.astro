---
const {parallax ,parallax2, piechart, barchart, contacts} =Astro.props;

---
<section id="Response" class="Chart" style={parallax}>
    <div class="wrapper text-light text-center p-2 m-0-auto">
    <chart class="max-width">
        <h2 class="m-0-auto pb-1">Student's Response</h2>
        <hr class="long-dash m-0-auto my-1"/>
        <div class="grid-center-all chart__wrapper">
            <div class="mt-1 p-1" data-sal="slide-up" data-sal-duration="1000" >
                <p class="pb-1">Student responses by section</p>
                <canvas width="600" height="600" class="pie_canvas canvas"></canvas>
            </div>
            <p class="chart__content" data-sal="slide-up" data-sal-duration="1000" >{piechart?.content}</p>
        </div>

        <div class="grid-center-all chart__wrapper">
            <p class="bar chart__content" data-sal="slide-up" data-sal-duration="1000" >{barchart?.content}</p>
            <div class="mt-1 p-1" data-sal="slide-up" data-sal-duration="1000" >
                <p class="pb-1">Domain of Interest among the Students</p>
                <canvas width="800" height="400" class="bar_canvas canvas"></canvas>
            </div>
        </div>
    
    </chart>
    </div>
</section>

